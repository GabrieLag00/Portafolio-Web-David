---
import { Image } from 'astro:assets';
const logoImage = '/1723010460046.png';

---

<header class="flex items-center justify-between p-4 bg-white bg-slate-800 shadow-md">
    <a class="flex items-center" href="#">
      <Image
        src={logoImage}
        alt="logo"
        class="w-10 h-10 invert-custom transition duration-300 ease-in-out dark:invert-custom-dark"
        width={100} 
        height={100} 
      />
      <span class="ml-2 text-xl font-krona text-black text-dark">
        GabrieLag00
      </span>
    </a>

    <nav class="c-navbar flex-grow">
      <ul class="flex justify-center space-x-4 text-lg text-gray-600 text-gray-300">
        <li>
          <a
            href="/"
            class="px-3 py-2 text-black hover:text-black hover:text-black hover:bg-gray-200 hover:bg-gray-170 rounded-md transition duration-300 ease-in-out"
          >
            Inicio
          </a>
        </li>
        <li>
          <a
            href="/Servicios"
            class="px-3 py-2 text-black hover:text-black hover:text-black hover:bg-gray-200 hover:bg-gray-170 rounded-md transition duration-300 ease-in-out"
          >
            Servicios
          </a>
        </li>
        <li>
          <a
            href="/Portafolio"
            class="px-3 py-2 text-black hover:text-black hover:text-black hover:bg-gray-200 hover:bg-gray-170 rounded-md transition duration-300 ease-in-out"
          >
            Portafolio
          </a>
        </li>
        <li>
          <a
            href="/Proyectos"
            class="px-3 py-2 text-black hover:text-black hover:text-black hover:bg-gray-200 hover:bg-gray-170 rounded-md transition duration-300 ease-in-out"
          >
            Proyectos
          </a>
        </li>
        <li>
          <a
            href="/Contacto"
            class="px-3 py-2 text-black hover:text-black hover:text-black hover:bg-gray-200 hover:bg-gray-170 rounded-md transition duration-300 ease-in-out"
          >
            Contacto
          </a>
        </li>
      </ul>
      
    </nav>

    <button
      class="ml-auto px-4 py-2 text-white bg-black border-2 border-black rounded-md hover:bg-black hover:border-black dark:bg-black dark:text-white dark:hover:bg-black dark:border-black transition duration-300 ease-in-out"
      type="submit"
    >
      <a href="/Cotizar">
      Cotizar
      </a>
    </button>
  </header>